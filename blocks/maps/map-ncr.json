{
    "width": 600,
    "height": 600,
    "data": {
      "url": "../data/spatial/phildis_ncr.json",
      "format": {"property": "features"}
    },
    "projection": {
      "type": "mercator",
      "center": [121,14],
      "scale": 15
    },
    "mark": {
      "type": "geoshape",
      "stroke": "#757575",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
        "field": "properties.{{ field }}",
        "type": "quantitative",
        "scale": {"scheme": "{{ scheme }}"},
        "legend": {
            "title": "{{ title }}"
        }
      },
      "tooltip": [
        {
           "field": "properties.municity",
           "type": "nominal",
           "title": "City or Muicipality"
        },
        {
           "field": "properties.{{ field }}",
           "type": "quantitative",
           "title": "{{ title }}"
        }
      ]
    }
  }
  